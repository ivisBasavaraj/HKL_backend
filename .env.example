# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/trackpro

# JWT Configuration
JWT_SECRET=trackpro-super-secret-jwt-key-2024-minimum-32-chars-change-this
JWT_EXPIRE=7d

# Session Configuration (for CSRF protection)
SESSION_SECRET=trackpro-session-secret-key-2024-minimum-32-chars-change-this

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Optional: MongoDB Atlas (Cloud Database)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trackpro?retryWrites=true&w=majority

# Email Configuration (for Tool Life and Notification System)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
# Note: For Gmail, use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
# Used for: Tool life alerts, user notifications, process updates

# Firebase Configuration (for Push Notifications)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"}
# Or use file path: FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/serviceAccountKey.json
